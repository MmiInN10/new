<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".full.MainActivity">
  <!-- MainActivity로 이동 버튼 -->
  <ImageButton
      android:id="@+id/button_main"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_margin="16dp"
      android:background="@drawable/circle_button"
      android:src="@drawable/baseline_home_filled_24"
  android:contentDescription="메인"
  app:layout_constraintBottom_toBottomOf="parent"
  app:layout_constraintStart_toStartOf="parent" />

  <!-- CalendarActivity로 이동 버튼 -->
  <ImageButton
      android:id="@+id/button_calendar"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_margin="16dp"
      android:background="@drawable/circle_button"
      android:src="@drawable/baseline_calendar_month_24"
      android:tint="@color/gray"
      android:contentDescription="캘린더"
  app:layout_constraintBottom_toBottomOf="parent"
  app:layout_constraintLeft_toRightOf="@+id/button_main"
  app:layout_constraintRight_toLeftOf="@+id/button_setting" />

  <!-- SettingsActivity로 이동 버튼 -->
  <ImageButton
      android:id="@+id/button_setting"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_margin="16dp"
      android:background="@drawable/circle_button"
      android:src="@drawable/baseline_settings_24"
      android:tint="@color/gray"

      android:contentDescription="설정"
  app:layout_constraintBottom_toBottomOf="parent"
  app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
